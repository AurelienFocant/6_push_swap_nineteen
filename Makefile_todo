CC			=	cc

CFLAGS		=	-Wall -Wextra -Werror 

GFLAGS		=	-g

DFLAGS		=	-fsanitize=address -fsanitize=undefined

LXFLAGS		=	-framework OpenGL -framework AppKit -lmlx

###########################################################

NAME		=	fdf

SRC_DIR		=	./src

SRC			=	$(wildcard $(SRC_DIR)/*.c)

OBJ_DIR		=	./obj

OBJ			=	$(SRC:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)
#OBJ		=	$(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRC))

LIBFT_DIR	=	./libft

LIBFT		=	$(LIBFT_DIR)/libft.a

.PHONY: all lib clean fclean libclean re

###########################################################

all:		$(NAME)

libft:		$(LIBFT)

$(NAME):	$(OBJ) $(LIBFT)
	$(CC) $(CFLAGS) $(DFLAGS) $(GFLAGS) $(LXFLAGS) $(OBJ) -o $@ -L$(LIBFT_DIR) -lft


$(LIBFT):
	$(MAKE) -C $(LIBFT_DIR)

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c | $(OBJ_DIR)
	$(CC) $(CFLAGS) $(DFLAGS) $(GFLAGS) -Iincludes -c $< -o $@

$(OBJ_DIR):
	mkdir -p obj

clean:
	rm -rf $(OBJ_DIR)

fclean:		clean
	rm -rf $(NAME) *dSYM 

libftclean:
	rm -rf $(LIBFT_DIR)/*.o
	rm -rf $(LIBFT)

re: fclean all
